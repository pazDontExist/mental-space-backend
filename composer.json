{
  "name": "moebius/mental-space-backend",
  "type": "project",
  "description": "Mental Space Backend",
  "license": "CC-BY-NC-SA-4.0",
  "require": {
    "php": "^7.4 || ^8.0",
    "ext-curl": "*",
    "ext-fileinfo": "*",
    "ext-gettext": "*",
    "ext-json": "*",
    "ext-openssl": "*",
    "ext-pdo": "*",
    "ext-posix": "*",
    "ext-zip": "*",
    "cakephp/chronos": "^2.3",
    "cakephp/database": "^4.2",
    "cakephp/validation": "^4.2",
    "fig/http-message-util": "^1.1",
    "guzzlehttp/guzzle": "^7.5",
    "lcobucci/jwt": "^4.3",
    "lulco/phoenix": "^2.4",
    "mpdf/mpdf": "^8.1",
    "nyholm/psr7": "^1.4",
    "nyholm/psr7-server": "^1.0",
    "odan/session": "^5.1",
    "peppeocchi/php-cron-scheduler": "^4.0",
    "php-di/php-di": "^7.0",
    "phpmailer/phpmailer": "^6.7",
    "selective/array-reader": "^2.1",
    "selective/basepath": "^2.0",
    "selective/validation": "^2.1",
    "slim/php-view": "^3.1",
    "slim/psr7": "^1.4",
    "slim/slim": "4.*",
    "slim/twig-view": "^3.2",
    "stripe/stripe-php": "^13.4",
    "symfony/console": "^5.3",
    "symfony/mailer": "^6.0",
    "symfony/polyfill-uuid": "^1.23",
    "symfony/uid": "^6.2",
    "symfony/yaml": "^6.4",
    "tuupola/cors-middleware": "^1.4",
    "tuupola/slim-jwt-auth": "^3.7",
    "twig/twig": "^3.3",
    "vlucas/phpdotenv": "~3.6"
  },
  "require-dev": {
    "dg/bypass-finals": "^1.3",
    "phpstan/phpstan": "^1.9",
    "phpunit/phpunit": "^10.4",
    "selective/test-traits": "^4.1",
    "squizlabs/php_codesniffer": "^3.6"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    },
    "files": [
      "src/Support/functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Test\\": "tests/"
    }
  },
  "config": {
    "process-timeout": 0,
    "sort-packages": true
  },

  "scripts": {
    "test": "phpunit",
    "analyze": "phpstan analyze",
    "cs-check": "phpcs",
    "cs-fix": "phpcbf"
  }
}
